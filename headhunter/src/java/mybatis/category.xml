<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper 
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
    
<mapper namespace="category">
    <resultMap id="categoryResult" type ="model.Category">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <collection property="vacancy" javaType="List" ofType="model.Vacancy" column="id"  select="selectVacancy"/>
    </resultMap>  
    
    <select id="selectVacancy" parameterType="int" resultMap="vacancy.vacancyResult">  
        select * from vacancy where id_category = #{id}
    </select>

    <select id="selectById" parameterType="int" resultMap="categoryResult">  
        select * from category where id = #{id}
    </select>
    
    <select id="selectAll" resultMap="categoryResult">  
        select * from category 
    </select>
    
    <delete id = "delete" parameterType = "model.Category"> 
        DELETE from category WHERE id = #{id}; 
    </delete> 

    <insert id = "insert" parameterType = "model.Category"> 
        INSERT INTO category (id, name) 
        VALUES (#{id}, #{ name});     
    </insert> 

    <update id = "update" parameterType = "model.Category"> 
        UPDATE category SET 
        name= #{name} 
        WHERE ID = #{id}; 
    </update>    
</mapper>
